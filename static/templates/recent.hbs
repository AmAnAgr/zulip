<li style="border-left: 2px solid {{stream_color}}!important;">
    <div>
        <div class="message_header message_header_stream">
            <div class="message-header-contents">
                <div class="message_label_clickable stream_label {{dark_background}}"
                  style="background: {{stream_color}}; border-left-color: {{stream_color}};">
                    {{stream_name}}
                </div>

                <span class="stream_topic">
                    <div class="message_label_clickable narrows_by_topic">
                        {{topic}}
                    </div>
                </span>
                <i class="fa fa-bell-slash on_hover_topic_mute recipient_bar_icon" data-stream-id="{{stream_id}}" data-topic-name="{{topic}}" title="{{t 'Mute topic' }} (M)" role="button" tabindex="0" aria-label="{{t 'Mute topic' }} (M)"></i>
                <i class="fa fa-bookmark on_hover_topic_mute recipient_bar_icon" data-stream-id="{{stream_id}}" data-topic-name="{{topic}}" title="{{t 'Bookmark Topic' }} (B)" role="button" tabindex="0" aria-label="{{t 'Bookmark Topic' }} (B)"></i>
                <i class="fa fa-check-circle on_hover_topic_mute recipient_bar_icon" data-stream-id="{{stream_id}}" data-topic-name="{{topic}}" title="{{t 'Mark as read' }} (R)" role="button" tabindex="0" aria-label="{{t 'Mark as read' }} (R)"></i>
                <span class="recent_topic_tag">
                    mention
                </span>
                <span class="recent_topic_unread_count">
                    7 unread
                </span>
                <ul class="recent_avatars">
                        <li class="recent_avatars__item">
                            <span class="recent_avatars__others">+3</span>
                        <li class="recent_avatars__item">
                            <img src="https://secure.gravatar.com/avatar/0f030c97ab51312c7bbffd3966198ced?d=identicon&version=1&s=50" class="recent_avatars__img" />
                        </li>
                        <li class="recent_avatars__item">
                            <img src="https://secure.gravatar.com/avatar/6d8cad0fd00256e7b40691d27ddfd466?d=identicon&version=1&s=50" class="recent_avatars__img" />
                        </li>
                </ul>
                <div class="recipient_row_date" title="{{t 'Last modified'}}">{{ time_stamp }}</div>
            </div>
        </div>
        <p style='display: inline-block;' class='recent-exerpt'>An exerpt from the last msg in the topic or allow user to write a note about the topic.</p>
        <i style='display: inline-block; float:right;' class="fa fa-edit" data-stream-id="{{stream_id}}" data-topic-name="{{topic}}" title="{{t 'Edit' }} (R)" role="button" tabindex="0" aria-label="{{t 'Edit' }} (R)"></i>
    </div>
</li>
