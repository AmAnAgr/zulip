#!/bin/bash

SCRIPT_DIR="$(dirname "$0")"
EXITCODE=0

if ! "$SCRIPT_DIR"/jslint/check-all; then
    EXITCODE=1;
fi

cd "$SCRIPT_DIR"/..;

if find . -name confirmation -prune -o -name '*.py' -print0 \
    | xargs -0 pyflakes \
    | grep -v 'imported but unused'; then

    EXITCODE=1;
fi

exit $EXITCODE
